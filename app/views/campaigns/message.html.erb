<div class="wrapper message-top">
  <h1>Rédigez votre message</h1>
</div>

<div class="wrapper message">
  <h2>Personnaliser avec :</h2>
  <a href="#">Prénom</a>
  <a href="#">Nom</a>
  <%= form_for @campaign do |f| %>
    <%= f.text_field :message, class: 'main' %>
  <% end %>
  <%= image_tag "iphone.svg" %>
</div>

<div class="bottom fixed">
  <div class="links-left">
    <%= link_to "Précédent", onclick="window.history.back()", class: "button grey previous"  %>
  </div>
  <nav>
    <ul>
      <li><%= link_to "Destinataires", root_path, class: "current" %></li>
      <li><%= image_tag "grey-arrow-right.svg" %></li>
      <li><%= link_to "Message", root_path, class: "current" %></li>
      <li><%= image_tag "grey-arrow-right.svg" %></li>
      <li class="inactive">Valider</li>
    </ul>
  </nav>
  <div class="links-right">
    <input type="submit" form="campaigns_new_message" class="button green next" value="Suivant">
  </div>
</div>
