<%= render 'shared/navbar-main' %>

<div class="wrapper top show">
  <div class="left-links">
    <%= link_to "", campaigns_path, class: "button grey back" %>
  </div>
  <h1 class="padded"><%= @campaign.name %></h1>
</div>

<div class="wrapper message show">
  <h2><%= t('campaigns.show.sent_at') %> <%= local_time(@campaign.sent_at, t('campaigns.index.sent_at_format')) %>.</h2>
  <h3>
    <% if @campaign.mailing_list %>
      <%= @campaign.mailing_list.name %> (<%= @campaign.mailing_list.contacts.count %>&nbsp;<%= t('campaigns.index.recipient_sent', :count => @campaign.mailing_list.contacts.count) %>)
    <% else %>
      <%= t('.deleted_mailing_list') %>
    <% end %>
  </h3>
  <div id="phone">
    <div class="screen"><div id="message-bubble"><%= @campaign.message %></div></div>
    <%= image_tag "iphone.svg" %>
  </div>
</div>
