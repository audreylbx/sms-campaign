<header class="campaign">
  <div class="left">
    <nav>
      <ul>
        <li>
          <%= link_to root_path do %>
            <%= image_tag "icon.svg", class: "icon"  %>
          <% end %>
        </li>
        <li>Nouvelle campagne</li>
      </ul>
    </nav>
  </div>

  <div class="right">
    <nav>
      <ul>
        <li><%= link_to "Aide", root_path, class: "help" %></li>
        <li><input type="submit" form="edit_campaign_<%= @campaign.id %>" class="save" value="Enregistrer et quitter" name="commit"></li>
      </ul>
    </nav>
  </div>
</header>

<div class="wrapper form-top">
  <h1>Nouvelle campagne SMS</h1>
</div>

<% if @mailing_lists.any? %>

  <div class="wrapper form select name">
    <h2>Quel est le nom de votre campagne ?</h2><span>*</span>
    <%= form_for @campaign do |f| %>
      <%= f.text_field :name, class: 'main', autofocus: true, onfocus: "this.value = this.value;", value: @campaign.name, id: 'campaign_name' %>
      <h2>A qui souhaitez-vous envoyer votre SMS ?</h2><span>*</span>
      <input type="text" placeholder="Recherche parmis vos listes de destinataires..." />
      <ul id="new_campaign_mailing_lists">
        <% @mailing_lists.each do |list| %>
          <li>
            <%= f.radio_button :mailing_list, list.id, checked: @campaign.mailing_list && @campaign.mailing_list.id == list.id, id: list.name %>
            <label for="<%= list.name %>">
              <%= list.name %>
              <span><%= list.contacts.count %><%= " destinataires".pluralize(list.contacts.count)%></span>
            </label>
            <div class="check"><div class="inside"></div></div>
          </li>
        <% end %>
      <ul>
      <%= f.hidden_field :current_step, :value => "step_1" %>
    <% end %>
  </div>

<% else %>

<div class="wrapper form no-list">
  <%= image_tag "hero-campaign-icon.svg", class: "illustration" %>
  <h2>Pour lancer votre première campagne, vous devez d'abord créer une première liste de diffusion.</h2>
  <%= link_to "Nouvelle liste de diffusion", new_mailing_list_path, class: "button green add list" %>
</div>

<% end %>

<div class="bottom fixed">
  <nav>
    <ul>
      <li><%= link_to "Destinataires", name_campaign_path(@campaign.id), class: "current" %></li>
      <li><%= image_tag "grey-arrow-right.svg" %></li>
      <li class="inactive">Message</li>
      <li><%= image_tag "grey-arrow-right.svg" %></li>
      <li class="inactive">Résumé</li>
    </ul>
  </nav>
  <% if @mailing_lists.any? %>
    <div class="links-right">
      <input type="submit" id="submit-campaign" form="edit_campaign_<%= @campaign.id %>" class="button inactive green next" value="Suivant" name="commit" disabled>
    </div>
  <% end %>
</div>
