<header>
  <div class="left">
    <nav>
      <ul>
        <li>
          <%= link_to root_path do %>
            <%= image_tag "icon.svg", class: "icon"  %>
          <% end %>
        </li>
        <li>
          <% if params[:controller] == 'campaigns' %>
            <%= link_to t('navbar.campaigns'), campaigns_path, class: "blue-border" %>
          <% else %>
            <%= link_to t('navbar.campaigns'), campaigns_path %>
          <% end %>
        </li>
        <li>
          <% if params[:controller] == 'mailing_lists' || params[:controller] == 'contacts' %>
            <%= link_to t('navbar.mailing_list'), mailing_lists_path, class: "blue-border" %>
          <% else %>
            <%= link_to t('navbar.mailing_list'), mailing_lists_path %>
          <% end %>
        </li>
      </ul>
    </nav>
  </div>

  <div class="right">
    <nav>
      <ul>
        <li class="user-info">
          <span class="avatar"><%= current_user.email.capitalize[0] %></span>
          <span class="email"><%= current_user.email %></span>
          <div class="dropdown">
            <ul>
              <li><a href="#"><%= t('navbar.my_account') %></a></li>
              <li><%= link_to t('navbar.disconnect'), destroy_user_session_path, method: :delete %></li>
            </ul>
          </div>
        </li>
        <li><%= link_to t('navbar.help'), campaigns_path, class: "help" %></li>
      </ul>
    </nav>
  </div>
</header>
