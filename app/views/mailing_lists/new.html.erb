<%= render 'shared/navbar-main' %>

<div class="wrapper form-top">
  <h1>Nouvelle liste de diffusion</h1>
</div>

<div class="wrapper form name mailing-list">
  <h2>Quel est le nom de votre liste ?</h2><span>*</span>
  <%= form_for @mailing_list do |f| %>
    <%= f.text_field :name, class: 'main', autofocus: true %>
    <h2>Comment souhaitez-vous ajouter des destinataires ?</h2>
    <label>
      <input type="radio" name="mailing_list[import_type]" id="mailing_list[import_type]" value="manual">
        <div class="label-content">
          <h3>Manuellement</h3>
        </div>
    </label>
    <label>
      <input type="radio" name="mailing_list[import_type]" id="mailing_list[import_type]" value="csv">
        <div class="label-content">
          <h3>Import de .CSV</h3>
          <%= link_to "Instructions", root_path %>
        </div>
    </label>
  <% end %>
</div>

