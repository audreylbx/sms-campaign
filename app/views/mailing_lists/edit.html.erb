<%= render 'shared/navbar-main' %>

<div class="wrapper form-top">
  <h1>Modifier la liste de diffusion</h1>
</div>

<div class="wrapper form">
  <h2>Quel est le nom de votre liste ?</h2>
  <%= form_for @mailing_list do |f| %>
    <%= f.text_field :name, class: 'main', autofocus: true, onfocus: "this.value = this.value;" %>
  <% end %>
</div>

<div class="wrapper form links">
  <input type="submit" form="edit_mailing_list_<%= @mailing_list.id %>" class="button green edit-contact" value="Modifier la liste">
  <a onclick="window.history.back()" class="cancel">Annuler</a>
  <%= link_to "Supprimer la liste", mailing_list_path, method: :delete, class: "delete" %>
</div>
